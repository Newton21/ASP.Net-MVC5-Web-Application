@using UMSMVC5.Helpers
@model IEnumerable<UMSMVC5.Models.Department>

@{
    ViewBag.Title = "Index";
}

<br/>

<p>
    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Add new Department", "Create", "Department", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
    @*@Html.ActionLink("Create New", "Create")*@
</p>

<h2>Department List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentName)
        </td>
        <td>
           
            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "Department", routeValues: new { id = item.DepartmentId }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-tasks'></span>", "Details", "Details", "Department", routeValues: new { id = item.DepartmentId }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "Department", routeValues: new { id = item.DepartmentId }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })
         </td>
    </tr>
}

</table>
